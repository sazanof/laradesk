{
    "extends": [
        "plugin:vue/vue3-recommended"
    ],
    "rules": {
        "semi": [
            "error",
            "never"
        ],
        "quotes": [
            2,
            "single",
            {
                "avoidEscape": true
            }
        ],
        "comma-dangle": [
            "error",
            {
                "arrays": "never",
                "objects": "never",
                "imports": "never",
                "exports": "never",
                "functions": "never"
            }
        ],
        "vue/html-indent": [
            "error",
            4,
            {
                "attribute": 1,
                "baseIndent": 1,
                "closeBracket": 0,
                "alignAttributesVertically": true,
                "ignores": []
            }
        ],
        "object-curly-spacing": [
            "error",
            "always"
        ],
        "array-bracket-spacing": [
            "error",
            "always"
        ],
        "vue/html-closing-bracket-spacing": [
            "error",
            {
                "startTag": "never",
                "endTag": "never",
                "selfClosingTag": "always"
            }
        ],
        "vue/html-closing-bracket-newline": [
            "error",
            {
                "singleline": "never",
                "multiline": "never"
            }
        ],
        "key-spacing": [
            "error",
            {
                "beforeColon": false,
                "afterColon": true
            }
        ],
        "vue/multi-word-component-names": "off",
        "vue/order-in-components": [
            "error",
            {
                "order": [
                    "el",
                    "name",
                    "key",
                    "parent",
                    "functional",
                    [
                        "delimiters",
                        "comments"
                    ],
                    [
                        "components",
                        "directives",
                        "filters"
                    ],
                    "extends",
                    "mixins",
                    [
                        "provide",
                        "inject"
                    ],
                    "ROUTER_GUARDS",
                    "layout",
                    "middleware",
                    "validate",
                    "scrollToTop",
                    "transition",
                    "loading",
                    "inheritAttrs",
                    "model",
                    [
                        "props",
                        "propsData"
                    ],
                    "emits",
                    "setup",
                    "asyncData",
                    "data",
                    "fetch",
                    "head",
                    "computed",
                    "watch",
                    "watchQuery",
                    "LIFECYCLE_HOOKS",
                    "methods",
                    [
                        "template",
                        "render"
                    ],
                    "renderError"
                ]
            }
        ]
    }
}
